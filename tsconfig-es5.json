{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "pretty": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "dist/es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "test",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}